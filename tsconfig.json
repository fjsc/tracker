{
  "compilerOptions": {
    "baseUrl": "./",
    "moduleResolution": "node",
    "target": "es5",
    "module":"es2015",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "dist/types",
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "dist/lib",
    "typeRoots": [
      "node_modules/@types",
      "./globals"
    ],
    "paths": {
      "touchai-angular-lib": [
        "dist/touchai-angular-lib"
      ],
      "touchai-angular-lib/*": [
        "dist/touchai-angular-lib/*"
      ]
    }
  },
  "include": [
    "src",
    "src/**/*.d.ts"
  ]
}
